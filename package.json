{
  "name": "toast-queue",
  "version": "1.0.0-alpha.9",
  "description": "A unstyled, accessible Vanilla JS library to display brief, temporary toast messages.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/toast-queue.js"
    },
    "./style.css": "./dist/toast-queue.css",
    "./presets/*": "./dist/presets/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "format": "biome check --write",
    "lint": "biome ci",
    "test": "vitest",
    "build": "vite build && vite build --config vite.presets.config.js",
    "prebuild": "npx jsdoc-to-markdown src/toast-queue.js > API.md",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@vitest/browser-playwright": "4.0.8",
    "vite": "7.2.2",
    "vitest": "4.0.8"
  },
  "volta": {
    "node": "22.13.1",
    "npm": "11.1.0"
  }
}
