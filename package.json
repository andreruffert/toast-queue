    "test": "vitest --config=vitest.browser.config.js",
    "build": "vite build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@vitest/browser-playwright": "4.0.6",
    "vite": "7.1.12",
    "vitest": "4.0.6"
  },
  "volta": {
    "node": "22.13.1",
    "npm": "11.1.0"
  }
}
